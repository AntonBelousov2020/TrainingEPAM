<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Аппендер для файла-->
    <appender name="FILE-AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/debug.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/debug.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <!-- Логгер для файла-->
    <logger name="com.epam.belousov.task1.racecondition.RaceCondition" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
    </logger>

    <!-- Аппендер для консоли-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- Логгер для консоли-->
    <logger name="com.epam.belousov.Main" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для файла и консоли-->
    <logger name="com.epam.belousov.task1.racecondition.Calc" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.epam.belousov.task1.deadlock.DeadLockDemo1" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.epam.belousov.task1.deadlock.DeadLockDemo2" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.epam.belousov.task2.raceconditionsolution.Calc" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.epam.belousov.task2.raceconditionsolution.RaceCondition" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.epam.belousov.task2.deadlocksolution.DeadLockDemo1" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.epam.belousov.task2.deadlocksolution.DeadLockDemo2" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
