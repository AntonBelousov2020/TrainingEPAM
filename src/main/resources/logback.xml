<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Аппендер для файла-->
    <appender name="FILE-AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/information.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/debug.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- Логгер для файла FactoryMethod -->
    <logger name="com.epam.belousov.generativepatterns.factorymethod.FactoryMethod" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
    </logger>

    <!-- Логгер для файла PrototypeWork -->
    <logger name="com.epam.belousov.generativepatterns.prototype.PrototypeWork" level="info" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
    </logger>

    <!-- Аппендер для консоли-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- Логгер для консоли FactoryMethod -->
    <logger name="com.epam.belousov.generativepatterns.factorymethod.FactoryMethod" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли PrototypeWork -->
    <logger name="com.epam.belousov.generativepatterns.prototype.PrototypeWork" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли SpeedAdapter -->
    <logger name="com.epam.belousov.structuralpatterns.adapter.SpeedAdapter" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли Speed -->
    <logger name="com.epam.belousov.structuralpatterns.adapter.Speed" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли Radio -->
    <logger name="com.epam.belousov.structuralpatterns.bridge.Radio" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли Tv -->
    <logger name="com.epam.belousov.structuralpatterns.bridge.Tv" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли SimpleRemote -->
    <logger name="com.epam.belousov.structuralpatterns.bridge.SimpleRemote" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли AdvancedRemote -->
    <logger name="com.epam.belousov.structuralpatterns.bridge.AdvancedRemote" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для консоли BridgeWork -->
    <logger name="com.epam.belousov.structuralpatterns.bridge.BridgeWork" level="info" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Логгер для файла и консоли-->
    <logger name="com.epam.belousov.task3.MyClassLoader" level="debug" additivity="false">
        <appender-ref ref="FILE-AUDIT"/>
        <appender-ref ref="CONSOLE"/>
    </logger>


    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>